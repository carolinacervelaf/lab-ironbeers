<div class="row row-margin">

    {{#each arrBeers}}
    
    <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card">
            <img src="{{this.image_url}}" class="card-img-top img-fluid beer-image" alt="{{name}}">
            <div class="card-body">
                <h4 class="card-title">{{this.name}}</h4>
                <h5 class="text-muted">{{this.tagline}}</h5>
                <p class="card-text">{{this.description}}</p>
            </div>
        </div>
    </div>

    {{/each}}
</div>